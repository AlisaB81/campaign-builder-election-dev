<%- include('partials/nav') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" id="app">
    <div class="py-6 space-y-6">
        <!-- Audit Logs -->
        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold">Audit Logs</h2>
                <button @click="loadAuditLogs" 
                        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Refresh Logs
                </button>
            </div>
            
            <div v-if="loading" class="text-center py-8">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto"></div>
                <p class="mt-2 text-gray-600">Loading audit logs...</p>
            </div>
            
            <div v-else-if="auditLogs.length === 0" class="text-center py-8 text-gray-500">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <p class="mt-2">No audit logs found</p>
            </div>
            
            <div v-else class="space-y-4">
                <!-- Filter Controls -->
                <div class="flex flex-col sm:flex-row gap-2 mb-4">
                    <input v-model="searchTerm" 
                           type="text" 
                           class="border rounded-md px-3 py-2 w-full sm:w-80 text-sm" 
                           placeholder="Search logs...">
                    <select v-model="actionFilter" 
                            class="border rounded-md px-3 py-2 w-full sm:w-auto text-sm">
                        <option value="">All Actions</option>
                        <option value="DELETE_ALL_CONTACTS">Delete All Contacts</option>
                        <option value="TEAM_MEMBER_ADDED">Team Member Added</option>
                        <option value="TEAM_MEMBER_REMOVED">Team Member Removed</option>
                        <option value="UNSUBSCRIBE">Unsubscribe</option>
                        <option value="FAILED_BULK_EMAIL">Failed Bulk Email</option>
                        <option value="FAILED_BULK_SMS">Failed Bulk SMS</option>
                        <option value="FAILED_BULK_AI">Failed Bulk AI</option>
                    </select>
                    <button @click="clearFilters" 
                            class="w-full sm:w-auto bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                        Clear Filters
                    </button>
                </div>
                
                <!-- Audit Logs Table -->
                <div class="overflow-x-auto border border-gray-200 rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr v-for="log in paginatedLogs" :key="log.timestamp + log.userId" class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    {{ formatTimestamp(log.timestamp) }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    <div>{{ log.details?.userEmail || log.details?.email || log.userId }}</div>
                                    <div v-if="log.details?.userType" class="text-xs text-gray-500">{{ log.details.userType }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span :class="getActionClass(log.action)" class="inline-flex px-2 py-1 text-xs font-medium rounded-full">
                                        {{ formatAction(log.action) }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">
                                    <div class="max-w-xs">
                                        <div v-if="log.details?.deletedCount" class="mb-1">
                                            <strong>Deleted:</strong> {{ log.details.deletedCount }} contacts
                                        </div>
                                        <div v-if="log.details?.restoredCount" class="mb-1">
                                            <strong>Restored:</strong> {{ log.details.restoredCount }} contacts
                                        </div>
                                        <div v-if="log.details?.importedCount" class="mb-1">
                                            <strong>Imported:</strong> {{ log.details.importedCount }} contacts
                                        </div>
                                        <div v-if="log.details?.remainingCount" class="mb-1">
                                            <strong>Remaining:</strong> {{ log.details.remainingCount }} contacts
                                        </div>
                                        <div v-if="log.details?.teamMemberEmail != null" class="mb-1">
                                            <strong>Team Member:</strong> {{ formatDetailValue(log.details.teamMemberEmail) }}
                                        </div>
                                        <div v-if="log.details?.accountName != null" class="mb-1">
                                            <strong>Account:</strong> {{ formatDetailValue(log.details.accountName) }}
                                        </div>
                                        <div v-if="log.details?.channel" class="mb-1">
                                            <strong>Channel:</strong> {{ log.details.channel }}
                                        </div>
                                        <div v-if="log.details?.failedCount !== undefined" class="mb-1">
                                            <strong>Failed:</strong> {{ log.details.failedCount }}
                                        </div>
                                        <div v-if="log.details?.reason != null" class="text-xs text-gray-500">
                                            {{ formatDetailValue(log.details.reason) }}
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                <div v-if="showPagination" class="mt-4 flex flex-col sm:flex-row justify-between items-center gap-2">
                    <div class="w-full sm:w-auto flex items-center justify-between sm:justify-start gap-3">
                        <div class="text-sm text-gray-700">
                            Showing {{ ((currentPage - 1) * logsPerPage) + 1 }} to 
                            {{ Math.min(currentPage * logsPerPage, filteredLogs.length) }} of 
                            {{ filteredLogs.length }} logs
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-600">Show:</span>
                            <select v-model.number="logsPerPage" @change="currentPage = 1" class="border rounded px-3 py-1 text-sm w-24">
                                <option :value="10">10</option>
                                <option :value="25">25</option>
                                <option :value="50">50</option>
                                <option :value="100">100</option>
                            </select>
                            <span class="text-sm text-gray-600">per page</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-2 w-full sm:w-auto">
                        <button @click="currentPage = Math.max(1, currentPage - 1)"
                                :disabled="currentPage === 1"
                                class="px-3 py-1 border rounded text-sm hover:bg-gray-50 disabled:opacity-50">
                            Previous
                        </button>
                        <div class="flex gap-1 overflow-x-auto max-w-full">
                            <button v-for="page in totalPages" 
                                    :key="page"
                                    @click="currentPage = page"
                                    :class="{
                                        'px-3 py-1 border rounded text-sm flex-shrink-0': true,
                                        'bg-blue-600 text-white': currentPage === page,
                                        'hover:bg-gray-50': currentPage !== page
                                    }">
                                {{ page }}
                            </button>
                        </div>
                        <button @click="currentPage = Math.min(totalPages, currentPage + 1)"
                                :disabled="currentPage === totalPages"
                                class="px-3 py-1 border rounded text-sm hover:bg-gray-50 disabled:opacity-50">
                            Next
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
const { createApp } = Vue

createApp({
    data() {
        return {
            auditLogs: [],
            loading: false,
            searchTerm: '',
            actionFilter: '',
            currentPage: 1,
            logsPerPage: 50
        }
    },
    computed: {
        filteredLogs() {
            let filtered = this.auditLogs;
            
            // Apply search filter
            if (this.searchTerm) {
                const search = String(this.searchTerm || '').toLowerCase();
                filtered = filtered.filter(log => {
                    const userEmail = String(log.details?.userEmail || log.details?.email || '').toLowerCase();
                    const action = String(log.action || '').toLowerCase();
                    const accountName = String(log.details?.accountName || '').toLowerCase();
                    const teamMemberEmail = String(log.details?.teamMemberEmail || '').toLowerCase();
                    
                    return userEmail.includes(search) ||
                           action.includes(search) ||
                           accountName.includes(search) ||
                           teamMemberEmail.includes(search);
                });
            }
            
            // Apply action filter
            if (this.actionFilter) {
                filtered = filtered.filter(log => String(log.action || '') === this.actionFilter);
            }
            
            return filtered;
        },
        paginatedLogs() {
            const start = (this.currentPage - 1) * this.logsPerPage;
            const end = this.currentPage * this.logsPerPage;
            return this.filteredLogs.slice(start, end);
        },
        totalPages() {
            return Math.ceil(this.filteredLogs.length / this.logsPerPage);
        },
        showPagination() {
            return this.filteredLogs.length > this.logsPerPage;
        }
    },
    methods: {
        async loadAuditLogs() {
            this.loading = true;
            try {

                const response = await fetch('/api/admin/audit-logs', {
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const logs = await response.json();

                    this.auditLogs = logs;
                } else {
                    const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
                    console.error('Failed to load audit logs:', response.status, errorData);
                    alert(`Failed to load audit logs: ${errorData.error || 'Server error'}`);
                }
            } catch (error) {
                console.error('Failed to load audit logs:', error);
                alert(`Failed to load audit logs: ${error.message}`);
            } finally {
                this.loading = false;
            }
        },
        
        formatTimestamp(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
        },
        
        formatAction(action) {
            const actionMap = {
                'DELETE_ALL_CONTACTS': 'Delete All Contacts',
                'TEAM_MEMBER_ADDED': 'Team Member Added',
                'TEAM_MEMBER_REMOVED': 'Team Member Removed',
                'UNSUBSCRIBE': 'Unsubscribe',
                'FAILED_BULK_EMAIL': 'Failed Bulk Email',
                'FAILED_BULK_SMS': 'Failed Bulk SMS',
                'FAILED_BULK_AI': 'Failed Bulk AI'
            };
            return actionMap[action] || action;
        },
        
        getActionClass(action) {
            const classMap = {
                'DELETE_ALL_CONTACTS': 'bg-red-100 text-red-800',
                'TEAM_MEMBER_ADDED': 'bg-green-100 text-green-800',
                'TEAM_MEMBER_REMOVED': 'bg-red-100 text-red-800',
                'UNSUBSCRIBE': 'bg-amber-100 text-amber-800',
                'FAILED_BULK_EMAIL': 'bg-orange-100 text-orange-800',
                'FAILED_BULK_SMS': 'bg-orange-100 text-orange-800',
                'FAILED_BULK_AI': 'bg-orange-100 text-orange-800'
            };
            return classMap[action] || 'bg-gray-100 text-gray-800';
        },
        
        clearFilters() {
            this.searchTerm = '';
            this.actionFilter = '';
            this.currentPage = 1;
        },
        formatDetailValue(val) {
            if (val == null) return '—';
            if (typeof val === 'string') return val;
            if (typeof val === 'object') {
                if (val.name && typeof val.name === 'string') return val.name;
                if (val.email && typeof val.email === 'string') return val.email;
                if (val.phone && typeof val.phone === 'string') return val.phone;
                return '—';
            }
            return String(val);
        }
    },
    
    async created() {
        await this.loadAuditLogs();
    }
}).mount('#app')
</script> 