<script>
const { createApp } = Vue

createApp({
    data() {
        return {
            users: [],
            search: '',
            filter: 'all',
            // Users pagination
            usersCurrentPage: 1,
            usersPageSize: 10,
            showTokenModal: false,
            selectedUser: null,
            tokenAdjustment: {
                sms: 0,
                email: 0,
                ai: 0,
                reason: ''
            },
            phoneNumbers: [],
            // Phone numbers pagination
            phoneNumbersCurrentPage: 1,
            phoneNumbersPageSize: 10,
            contacts: [],
            accounts: {},
            // Add user form
            showAddUserForm: false,
            creatingUser: false,
            createUserError: '',
            createUserSuccess: '',
            newUser: {
                email: '',
                password: '',
                username: '',
                firstName: '',
                lastName: '',
                company: '',
                userType: 'account_holder',
                accountType: 'reg_client',
                subscriptionStatus: 'none',
                isVerified: false,
                smsTokens: 0,
                emailTokens: 0,
                aiTokens: 0,
                accountId: null
            },
            // Assign phone number (app owner only)
            isAppOwner: <%= (typeof user !== 'undefined' && user && user.userType === 'app_owner') ? 'true' : 'false' %>,
            assignablePhoneNumbers: [],
            assignAccountId: '',
            assignPhoneNumber: '',
            assignSubmitting: false,
            assignError: '',
            assignSuccess: ''
        }
    },
    computed: {
        accountHolders() {
            return this.users.filter(u => u.userType === 'account_holder') || [];
        },
        filteredUsers() {
            const filtered = this.users.filter(user => {
                const matchesSearch = !this.search || ((user.email || '').toLowerCase().includes(this.search.toLowerCase()));
                const matchesFilter = this.filter === 'all' 
                    || (this.filter === 'verified' && user.isVerified)
                    || (this.filter === 'unverified' && !user.isVerified);
                return matchesSearch && matchesFilter;
            });
            return filtered;
        },
        paginatedUsers() {
            const start = (this.usersCurrentPage - 1) * this.usersPageSize;
            const end = this.usersCurrentPage * this.usersPageSize;
            return this.filteredUsers.slice(start, end);
        },
        usersTotalPages() {
            return Math.max(1, Math.ceil(this.filteredUsers.length / this.usersPageSize));
        },
        showUsersPagination() {
            return this.filteredUsers.length > this.usersPageSize;
        },
        paginatedPhoneNumbers() {
            const start = (this.phoneNumbersCurrentPage - 1) * this.phoneNumbersPageSize;
            const end = this.phoneNumbersCurrentPage * this.phoneNumbersPageSize;
            return this.phoneNumbers.slice(start, end);
        },
        phoneNumbersTotalPages() {
            return Math.max(1, Math.ceil(this.phoneNumbers.length / this.phoneNumbersPageSize));
        },
        showPhoneNumbersPagination() {
            return this.phoneNumbers.length > this.phoneNumbersPageSize;
        }
    },
    methods: {
        getAuthHeaders() {
            const token = localStorage.getItem('token');
            return token ? { 'Authorization': 'Bearer ' + token } : {};
        },
        resetUsersPagination() {
            this.usersCurrentPage = 1;
        },
        resetPhoneNumbersPagination() {
            this.phoneNumbersCurrentPage = 1;
        },
        async loadUsers() {
            try {
                const response = await fetch('/api/admin/users', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    const data = await response.json();
                    this.users = Array.isArray(data) ? data : (data.users || []);
                    
                    this.resetUsersPagination();
                    // Load phone numbers after users are loaded
                    await this.loadPhoneNumbers();
                    if (this.isAppOwner) await this.loadAssignablePhoneNumbers();
                } else {
                    console.error('Failed to load users, status:', response.status);
                    const errorText = await response.text();
                    console.error('Error response:', errorText);
                }
            } catch (error) {
                console.error('Failed to load users:', error);
            }
        },
        
        async loadContacts() {
            try {
                // Load all contacts from all users for admin view
                const response = await fetch('/api/admin/contacts', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    this.contacts = await response.json();
                }
            } catch (error) {
                console.error('Failed to load contacts:', error);
            }
        },
        
        async loadAccounts() {
            try {
                const response = await fetch('/api/admin/accounts', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    const accountsList = await response.json();
                    // Convert array to object for easy lookup
                    this.accounts = {};
                    accountsList.forEach(account => {
                        this.accounts[account.id] = account;
                    });
                }
            } catch (error) {
                console.error('Failed to load accounts:', error);
            }
        },
        
        async loadPausedCampaigns() {
            this.loadingPausedCampaigns = true;
            try {
                const response = await fetch('/api/admin/notifications?unreadOnly=false', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    const data = await response.json();
                    // Filter for paused campaign notifications
                    this.pausedCampaigns = (data.notifications || []).filter(n => 
                        n.type === 'campaign_paused'
                    );
                } else {
                    console.error('Failed to load paused campaigns:', response.status);
                }
            } catch (error) {
                console.error('Failed to load paused campaigns:', error);
            } finally {
                this.loadingPausedCampaigns = false;
            }
        },
        
        async markNotificationRead(notification) {
            try {
                const response = await fetch(`/api/admin/notifications/${notification.id}/read`, {
                    method: 'POST',
                    credentials: 'include',
                    headers: Object.assign({ 'Content-Type': 'application/json' }, this.getAuthHeaders()),
                    body: JSON.stringify({
                        accountId: notification.accountId
                    })
                });
                
                if (response.ok) {
                    notification.read = true;
                }
            } catch (error) {
                console.error('Failed to mark notification as read:', error);
            }
        },
        
        formatTimestamp(timestamp) {
            if (!timestamp) return 'Unknown';
            const date = new Date(timestamp);
            return date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
        },
        
        getContactDisplayName(identifier) {
            if (!identifier) return 'Unknown';

            // Normalize identifier to a string phone/email value
            let idCandidate = identifier;
            if (Array.isArray(idCandidate)) {
                idCandidate = idCandidate.find(v => !!v) ?? '';
            } else if (typeof idCandidate === 'object') {
                if (idCandidate && (idCandidate.phone || idCandidate.email)) {
                    idCandidate = idCandidate.phone || idCandidate.email;
                } else {
                    // Unknown object shape; stringify safely
                    idCandidate = '';
                }
            }

            const idStr = String(idCandidate || '').trim();
            if (!idStr) return 'Unknown';

            // Try email match first
            if (idStr.includes('@')) {
                const contactByEmail = this.contacts.find(c => (c.email || '').toLowerCase() === idStr.toLowerCase());
                if (contactByEmail) {
                    return `${contactByEmail.firstName} ${contactByEmail.lastName} (${idStr})`;
                }
                return idStr;
            }

            // Clean the identifier as phone (remove +1, spaces, non-digits)
            const cleanIdentifier = idStr.replace(/^\+?1?/, '').replace(/\D/g, '');

            // Find contact by phone number (cleaned)
            const contact = this.contacts.find(c => {
                if (!c.phone) return false;
                const cleanPhone = String(c.phone).replace(/^\+?1?/, '').replace(/\D/g, '');
                return cleanPhone === cleanIdentifier;
            });

            if (contact) {
                return `${contact.firstName} ${contact.lastName} (${idStr})`;
            }

            return idStr;
        },
        
        adjustTokens(user) {
            this.selectedUser = user;
            this.tokenAdjustment = {
                sms: this.formatTokenValue(user.smsTokens),
                email: this.formatTokenValue(user.emailTokens),
                ai: this.formatTokenValue(user.aiTokens),
                reason: ''
            };
            this.showTokenModal = true;
        },
        
        async saveTokenAdjustment() {
            try {
                // Client-side validation
                const newSmsTokens = parseInt(this.tokenAdjustment.sms);
                const newEmailTokens = parseInt(this.tokenAdjustment.email);
                const newAiTokens = parseInt(this.tokenAdjustment.ai);
                const reason = this.tokenAdjustment.reason.trim();
                
                if (isNaN(newSmsTokens) || isNaN(newEmailTokens) || isNaN(newAiTokens)) {
                    alert('Please enter valid numbers for token amounts');
                    return;
                }
                
                if (newSmsTokens < 0 || newEmailTokens < 0 || newAiTokens < 0) {
                    alert('Token amounts cannot be negative');
                    return;
                }
                
                if (newSmsTokens > 100000 || newEmailTokens > 100000 || newAiTokens > 100000) {
                    alert('Token amounts cannot exceed 100,000');
                    return;
                }
                
                if (!reason || reason.length < 3) {
                    alert('Please provide a reason (at least 3 characters)');
                    return;
                }
                
                // Check if any changes were made
                const currentSmsTokens = this.formatTokenValue(this.selectedUser.smsTokens);
                const currentEmailTokens = this.formatTokenValue(this.selectedUser.emailTokens);
                const currentAiTokens = this.formatTokenValue(this.selectedUser.aiTokens);

                if (newSmsTokens === currentSmsTokens && newEmailTokens === currentEmailTokens && newAiTokens === currentAiTokens) {
                    alert('No changes detected. Please modify token amounts or cancel.');
                    return;
                }
                
                const response = await fetch('/api/admin/adjust-tokens', {
                    method: 'POST',
                    credentials: 'include',
                    headers: Object.assign({ 'Content-Type': 'application/json' }, this.getAuthHeaders()),
                    body: JSON.stringify({
                        userId: this.selectedUser.id,
                        smsTokens: newSmsTokens,
                        emailTokens: newEmailTokens,
                        aiTokens: newAiTokens,
                        reason: reason
                    })
                });
                
                if (response.ok) {
                    await this.loadUsers();
                    this.closeTokenModal();
                    alert('Tokens set successfully');
                    
                    // Update navigation token balances
                    if (typeof updateTokenBalances === 'function') {
                        await updateTokenBalances();
                    }
                } else {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Failed to adjust tokens');
                }
            } catch (error) {
                alert(error.message);
            }
        },
        
        closeTokenModal() {
            this.showTokenModal = false;
            this.selectedUser = null;
            this.tokenAdjustment = {
                sms: 0,
                email: 0,
                ai: 0,
                reason: ''
            };
        },
        
        async deleteUser(user) {
            if (!confirm(`Are you sure you want to delete user ${user.email || 'No Email'} (ID: ${user.id})?`)) {
                return;
            }
            
            try {
                // Ensure user.id is a valid string/number
                const userId = String(user.id).trim();
                if (!userId || !/^\d+$/.test(userId)) {
                    alert(`Invalid user ID format: ${userId}`);
                    return;
                }
                
                const response = await fetch(`/api/admin/users/${userId}`, {
                    method: 'DELETE',
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    const data = await response.json();
                    this.users = this.users.filter(u => u.id !== user.id);
                    alert('User deleted successfully');
                    // Reload users to ensure UI is in sync
                    await this.loadUsers();
                } else {
                    const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
                    throw new Error(errorData.error || `Failed to delete user: ${response.status} ${response.statusText}`);
                }
            } catch (error) {
                console.error('Delete user error:', error);
                alert(`Error deleting user: ${error.message}`);
            }
        },

        async loadPhoneNumbers() {
            try {
                const response = await fetch('/api/admin/phone-numbers', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                
                if (response.ok) {
                    this.phoneNumbers = await response.json();
                    this.resetPhoneNumbersPagination();
                } else {
                    console.error('Failed to load phone numbers, status:', response.status);
                }
            } catch (error) {
                console.error('Failed to load phone numbers:', error);
            }
        },

        async loadAssignablePhoneNumbers() {
            try {
                const response = await fetch('/api/admin/assignable-phone-numbers', {
                    credentials: 'include',
                    headers: this.getAuthHeaders()
                });
                if (response.ok) {
                    this.assignablePhoneNumbers = await response.json();
                } else {
                    this.assignablePhoneNumbers = [];
                }
            } catch (error) {
                console.error('Failed to load assignable phone numbers:', error);
                this.assignablePhoneNumbers = [];
            }
        },

        async assignPhoneNumberToAccount() {
            this.assignError = '';
            this.assignSuccess = '';
            if (!this.assignAccountId || !this.assignPhoneNumber) {
                this.assignError = 'Please select an account and a phone number.';
                return;
            }
            this.assignSubmitting = true;
            try {
                const response = await fetch('/api/admin/numbers', {
                    method: 'POST',
                    credentials: 'include',
                    headers: Object.assign({ 'Content-Type': 'application/json' }, this.getAuthHeaders()),
                    body: JSON.stringify({
                        userId: this.assignAccountId,
                        number: this.assignPhoneNumber
                    })
                });
                const data = await response.json().catch(() => ({}));
                if (response.ok) {
                    this.assignSuccess = 'Phone number assigned successfully.';
                    this.assignAccountId = '';
                    this.assignPhoneNumber = '';
                    await this.loadPhoneNumbers();
                    await this.loadAssignablePhoneNumbers();
                } else {
                    this.assignError = data.error || 'Failed to assign phone number.';
                }
            } catch (error) {
                this.assignError = error.message || 'Failed to assign phone number.';
            } finally {
                this.assignSubmitting = false;
            }
        },

        getUserEmail(userId) {
            const user = this.users.find(u => u.id === userId);
            return user ? (user.email || `No Email (ID: ${user.id})`) : 'Unknown User';
        },
        
        formatTokenValue(tokens) {
            if (typeof tokens === 'object' && tokens !== null) {
                return tokens.count || 0;
            }
            return tokens || 0;
        },
        
        getAccountName(accountId) {
            // Find the account holder for this team member
            const accountHolder = this.users.find(u => u.id === accountId && u.userType === 'account_holder');
            if (accountHolder) {
                return accountHolder.email || accountHolder.company || `Account ${accountId}`;
            }
            // Fallback: try to get account name from accounts data if available
            if (this.accounts && this.accounts[accountId]) {
                return this.accounts[accountId].name || `Account ${accountId}`;
            }
            return `Account ${accountId}`;
        },
        
        handleUserTypeChange() {
            // Reset accountId if user type changes away from team_member
            if (this.newUser.userType !== 'team_member') {
                this.newUser.accountId = null;
            }
        },
        
        handleAccountTypeChange() {
            // Auto-set subscription status based on account type
            if (this.newUser.accountType === 'eda' || this.newUser.accountType === 'app_owner') {
                this.newUser.subscriptionStatus = 'none';
            } else if (this.newUser.accountType === 'reg_client' && this.newUser.subscriptionStatus === 'none') {
                // Default to trial for new reg_client accounts
                this.newUser.subscriptionStatus = 'trial';
            }
        },
        
        resetAddUserForm() {
            this.showAddUserForm = false;
            this.createUserError = '';
            this.createUserSuccess = '';
            this.newUser = {
                email: '',
                password: '',
                username: '',
                firstName: '',
                lastName: '',
                company: '',
                userType: 'account_holder',
                accountType: 'reg_client',
                subscriptionStatus: 'none',
                isVerified: false,
                smsTokens: 0,
                emailTokens: 0,
                aiTokens: 0,
                accountId: null
            };
        },
        
        async createUser() {
            this.creatingUser = true;
            this.createUserError = '';
            this.createUserSuccess = '';
            
            try {
                // Validate required fields
                if (!this.newUser.email || !this.newUser.password) {
                    throw new Error('Email and password are required');
                }
                
                if (this.newUser.userType === 'team_member' && !this.newUser.accountId) {
                    throw new Error('Account ID is required for team members');
                }
                
                // Prepare request body
                const requestBody = {
                    email: this.newUser.email.trim(),
                    password: this.newUser.password,
                    username: this.newUser.username.trim() || null,
                    firstName: this.newUser.firstName.trim() || null,
                    lastName: this.newUser.lastName.trim() || null,
                    company: this.newUser.company.trim() || null,
                    userType: this.newUser.userType,
                    accountType: this.newUser.accountType,
                    subscriptionStatus: this.newUser.subscriptionStatus,
                    isVerified: this.newUser.isVerified,
                    smsTokens: parseInt(this.newUser.smsTokens) || 0,
                    emailTokens: parseInt(this.newUser.emailTokens) || 0,
                    aiTokens: parseInt(this.newUser.aiTokens) || 0
                };
                
                // Add accountId if team member
                if (this.newUser.userType === 'team_member') {
                    requestBody.accountId = this.newUser.accountId.trim();
                }
                
                const response = await fetch('/api/admin/users/create', {
                    method: 'POST',
                    credentials: 'include',
                    headers: Object.assign({ 'Content-Type': 'application/json' }, this.getAuthHeaders()),
                    body: JSON.stringify(requestBody)
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    this.createUserSuccess = `User created successfully! Email: ${data.user.email}`;
                    // Reload users list
                    await this.loadUsers();
                    // Reset form after 2 seconds
                    setTimeout(() => {
                        this.resetAddUserForm();
                    }, 2000);
                } else {
                    throw new Error(data.error || 'Failed to create user');
                }
            } catch (error) {
                console.error('Create user error:', error);
                this.createUserError = error.message || 'Failed to create user. Please try again.';
            } finally {
                this.creatingUser = false;
            }
        }
    },
    async created() {
        // Server already authenticated (page was rendered). Use cookies via credentials: 'include'; do not redirect on missing localStorage token.
        await this.loadUsers();
        await this.loadContacts();
        await this.loadAccounts();
    }
