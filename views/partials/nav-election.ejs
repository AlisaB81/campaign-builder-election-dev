<script>
// Load help ticket counts for admin users only
async function loadHelpTicketCounts() {
    try {
        const token = localStorage.getItem('token');
        if (!token) return;
        
        try {
            const userResponse = await fetch('/api/user', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            
            if (!userResponse.ok) return;
            
            const userData = await userResponse.json();
            
            if (!userData.userType || userData.userType !== 'app_owner') return;
            if (!userData.permissions || (!userData.permissions.includes('manage_users') && !userData.permissions.includes('*'))) return;
            
        } catch (error) {
            return;
        }
        
        const response = await fetch('/api/admin/help-tickets/count', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        
        if (response.ok) {
            const counts = await response.json();
            const sidebarCount = document.getElementById('helpTicketsCountSidebar');
            const sidebarNumber = document.getElementById('helpTicketsCountNumberSidebar');
            if (sidebarCount && sidebarNumber && counts.open > 0) {
                sidebarCount.classList.remove('hidden');
                sidebarNumber.textContent = counts.open;
            }
        }
    } catch (error) {
        // Silent fail
    }
}

// Update token balances in sidebar
async function updateTokenBalances() {
    try {
        const response = await fetch('/api/user', {
            credentials: 'include'
        });
        
        if (response.ok) {
            const userData = await response.json();
            const smsTokens = typeof userData.smsTokens === 'object' ? (userData.smsTokens.balance || 0) : (userData.smsTokens || 0);
            const emailTokens = typeof userData.emailTokens === 'object' ? (userData.emailTokens.balance || 0) : (userData.emailTokens || 0);
            const aiTokens = userData.aiTokens || 0;
            
            const balanceEl = document.getElementById('tokenBalancesSidebar');
            if (balanceEl) {
                balanceEl.textContent = `SMS: ${smsTokens} | Email: ${emailTokens} | AI: ${aiTokens}`;
            }
        }
    } catch (error) {
        // Silent on network/connection errors so setInterval doesn't spam console
    }
}

document.addEventListener('DOMContentLoaded', () => {
    loadHelpTicketCounts();
    updateTokenBalances();
    setInterval(loadHelpTicketCounts, 30000);
    setInterval(updateTokenBalances, 60000);
});
</script>
