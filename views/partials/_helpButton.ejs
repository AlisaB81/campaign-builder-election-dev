<!-- Help Button Component -->
<div class="relative">
    <button type="button" 
            onclick="openHelpModal()"
            aria-label="Get help or submit support request"
            class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-indigo-100 hover:bg-indigo-200 text-indigo-600 hover:text-indigo-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            title="Get Help">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    </button>
</div>

<!-- Help Modal -->
<div id="helpModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-2/3 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <!-- Modal Header -->
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-gray-900">Submit Help Request</h3>
                <button onclick="closeHelpModal()" 
                        class="text-gray-400 hover:text-gray-600 focus:outline-none focus:text-gray-600"
                        aria-label="Close help modal">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <form id="helpForm" class="space-y-4">
                <div>
                    <label for="helpFullName" class="block text-sm font-medium text-gray-700 mb-1">
                        Full Name
                    </label>
                    <input type="text" 
                           id="helpFullName" 
                           name="fullName"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                           required>
                </div>

                <div>
                    <label for="helpEmail" class="block text-sm font-medium text-gray-700 mb-1">
                        Email
                    </label>
                    <input type="email" 
                           id="helpEmail" 
                           name="email"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                           required>
                </div>

                <div>
                    <label for="helpPage" class="block text-sm font-medium text-gray-700 mb-1">
                        Current Page
                    </label>
                    <input type="text" 
                           id="helpPage" 
                           name="page"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50"
                           readonly>
                </div>

                <div>
                    <label for="helpMessage" class="block text-sm font-medium text-gray-700 mb-1">
                        Describe your issue
                    </label>
                    <textarea id="helpMessage" 
                              name="message"
                              rows="4"
                              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                              placeholder="Please describe the issue you're experiencing..."
                              required></textarea>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" 
                            onclick="closeHelpModal()"
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Submit Help Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Help Modal Functions
function openHelpModal() {
    const modal = document.getElementById('helpModal');
    modal.classList.remove('hidden');
    
    // Pre-fill form with user data
    const userName = '<%= (typeof user !== "undefined" && user) ? (user.fullName || user.username || "") : "" %>';
    const userEmail = '<%= (typeof user !== "undefined" && user) ? (user.email || "") : "" %>';
    document.getElementById('helpFullName').value = userName;
    document.getElementById('helpEmail').value = userEmail;
    
    // Auto-detect current page
    document.getElementById('helpPage').value = window.location.pathname;
    
    // Focus on message field
    document.getElementById('helpMessage').focus();
}

function closeHelpModal() {
    const modal = document.getElementById('helpModal');
    modal.classList.add('hidden');
    
    // Reset form
    document.getElementById('helpForm').reset();
}

// Handle form submission
document.addEventListener('DOMContentLoaded', function() {
    const helpForm = document.getElementById('helpForm');
    if (helpForm) {
        helpForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(helpForm);
            const data = {
                fullName: formData.get('fullName'),
                email: formData.get('email'),
                page: formData.get('page'),
                message: formData.get('message')
            };
            
            try {
                const response = await fetch('/api/help', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    // Show success message
                    showHelpToast('Help request submitted successfully! Ticket #' + result.ticketNumber, 'success');
                    closeHelpModal();
                } else {
                    showHelpToast('Error submitting help request: ' + result.error, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showHelpToast('Error submitting help request. Please try again.', 'error');
            }
        });
    }
});

// Simple toast notification function
function showHelpToast(message, type = 'info') {
    // Create a simple toast without conflicting with existing systems
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg max-w-sm transition-all duration-300 ${
        type === 'success' ? 'bg-green-500 text-white' :
        type === 'error' ? 'bg-red-500 text-white' :
        type === 'warning' ? 'bg-yellow-500 text-white' :
        'bg-blue-500 text-white'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 5000);
}
</script>
